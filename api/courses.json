{
  "resourcePath": "/courses",
  "apis": [
    {
      "path": "/courses",
      "description": "Course Information for the current year",
      "operations": [
        {
          "httpMethod": "GET",
          "summary": "List all Courses",
          "notes": "Returns all Courses",
          "responseClass": "List[Course]",
          "nickname": "get-courses",
          "parameters": [
            {
              "name": "offset",
              "description": "Defaults to 0/",
              "paramType": "query",
              "required": false,
              "allowMultiple": true,
              "dataType": "int"
            },
            {
              "name": "limit",
              "description": "Defaults to 100",
              "paramType": "query",
              "required": false,
              "allowMultiple": true,
              "dataType": "int"
            },
            {
              "name": "level",
              "description": "If not supplied returns Courses at all levels",
              "paramType": "query",
              "required": false,
              "allowMultiple": true,
              "dataType": "string",
              "allowableValues":{
                "valueType":"LIST",
                "values":[
                  "graduate",
                  "undergraduate"
                ]
              }
            }
          ],
          "errorResponses": []
        }
      ]
    },
   {
