{
  "resourcePath": "\/courses",
  "apis": [
    {
      "path": "/courses",
      "description": "Course Information",
      "operations": [
        {
          "httpMethod": "GET",
          "summary": "Course",
          "notes": "Returns all Courses",
          "responseClass": "Array[Course]",
          "nickname": "get-courses",
          "parameters": [
            {
              "name": "offset",
              "description": "Defaults to 0/",
              "paramType": "query",
              "required": false,
              "allowMultiple": true,
              "dataType": "int"
            },
            {
              "name": "limit",
              "description": "If not supplied returns all Courses",
              "paramType": "query",
              "required": false,
              "allowMultiple": true,
              "dataType": "int"
            },
            {
              "name": "level",
              "description": "If not supplied returns Courses at all levels",
              "paramType": "query",
              "required": false,
              "allowMultiple": true,
              "dataType": "string",
              "allowableValues":{
                "valueType":"LIST",
                "values":[
                  "graduate",
                  "undergraduate"
                ]
              }
            }
          ],
          "errorResponses": []
        }
      ]
    },
    {
      "path": "/courses/{year}/{course-id}",
      "description": "Course Information",
      "operations": [
        {
          "httpMethod": "GET",
          "summary": "Find a Course by YEAR and ID",
          "notes": "Returns a Course based on the the YEAR and ID",
          "responseClass": "Course",
          "nickname": "get-course-by-year-and-id",
          "parameters": [
            {
              "name": "course-id",
              "description": "ID of Course to be returned",
              "paramType": "path",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            },
            {
              "name": "year",
              "description": "Year of Course to be returned. In {YYYY} format.",
              "paramType": "path",
              "required": true,
              "allowMultiple": false,
              "dataType": "int"
            }
          ],
          "errorResponses": [
            {
              "code": 400,
              "reason": "ID or YEAR format invalid"
            },
            {
              "code": 404,
              "reason": "Course not found"
            }
          ]
        }
      ]
    },
    {
      "path": "/courses/{course-id}",
      "description": "Course Information",
      "operations": [
        {
          "httpMethod": "GET",
          "summary": "Find a Course by ID",
          "notes": "Returns a Course based on the Course ID for the CURRENT year",
          "responseClass": "Course",
          "nickname": "get-course-by-id",
          "parameters": [
            {
              "name": "course-id",
              "description": "ID of Course to be returned",
              "paramType": "path",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            }
          ],
          "errorResponses": [
            {
              "code": 400,
              "reason": "ID format invalid"
            },
            {
              "code": 404,
              "reason": "Course not found"
            }
          ]
        }
      ]
    }
  ],
  "models": {
    "Course": {
      "id": "Course",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "subject-ids": {
          "items": {
            "type": "string"
          },
          "type": "Array"
        }
      }
    }
  }
}