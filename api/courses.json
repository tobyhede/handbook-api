            {
              "name": "year",
              "description": "Year of Course to be returned. In {YYYY} format.",
              "paramType": "path",
              "required": true,
              "allowMultiple": false,
              "dataType": "int"
            }
          ],
          "errorResponses": [
            {
              "code": 400,
              "reason": "ID or YEAR format invalid"
            },
            {
              "code": 404,
              "reason": "Course not found"
            }
          ]
        }
