{
  "resourcePath": "\/courses",
  "apis": [
    {
      "path": "/subjects",
      "description": "Subject Information",
      "operations": [
        {
          "httpMethod": "GET",
          "summary": "List all Subjects",
          "notes": "Returns all Subjects",
          "responseClass": "List[Subject]",
          "nickname": "get-subjects",
          "parameters": [
            {
              "name": "offset",
              "description": "Defaults to 0",
              "paramType": "query",
              "required": false,
              "allowMultiple": true,
              "dataType": "int"
            },
            {
              "name": "limit",
              "description": "Defaults to 100",
              "paramType": "query",
              "required": false,
              "allowMultiple": true,
              "dataType": "int"
            },
            {
              "name": "level",
              "description": "If not supplied returns Subjects at all levels",
              "paramType": "query",
              "required": false,
              "allowMultiple": true,
              "dataType": "string",
              "allowableValues":{
                "valueType":"LIST",
                "values":[
                  "graduate",
                  "undergraduate"
                ]
              }
            }
          ],
          "errorResponses": []
        }
      ]
    },
    {
      "path": "/subjects/{year}/{subject-id}",
      "description": "Subject Information",
      "operations": [
        {
          "httpMethod": "GET",
          "summary": "Find a Subject by YEAR and ID",
          "notes": "Returns a Subject based on the the YEAR and ID",
          "responseClass": "Subject",
          "nickname": "get-subject-by-year-and-id",
          "parameters": [
            {
              "name": "subject-id",
              "description": "ID of Subject to be returned",
              "paramType": "path",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            },
            {
              "name": "year",
              "description": "Year of Subject to be returned. In {YYYY} format.",
              "paramType": "path",
              "required": true,
              "allowMultiple": false,
              "dataType": "int"
            }
          ],
          "errorResponses": [
            {
              "code": 400,
              "reason": "ID or YEAR format invalid"
            },
            {
              "code": 404,
              "reason": "Subject not found"
            }
          ]
        }
      ]
    },
    {
      "path": "/subjects/{subject-id}",
      "description": "Subject Information",
      "operations": [
        {
          "httpMethod": "GET",
          "summary": "Find a Subject by ID",
          "notes": "Returns a Subject based on the Subject ID for the CURRENT year",
          "responseClass": "Subject",
          "nickname": "get-subject-by-id",
          "parameters": [
            {
              "name": "subject-id",
              "description": "ID of Subject to be returned",
              "paramType": "path",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            }
          ],
          "errorResponses": [
            {
              "code": 400,
              "reason": "ID format invalid"
            },
            {
              "code": 404,
              "reason": "Subject not found"
            }
          ]
        }
      ]
    }
  ],
  "models": {
    "Subject": {
      "id": "Subject",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "course-ids": {
          "items": {
            "type": "string"
          },
          "type": "Array"
        },
        "major-ids": {
          "items": {
            "type": "string"
          },
          "type": "Array"
        }
      }
    }
  }
}